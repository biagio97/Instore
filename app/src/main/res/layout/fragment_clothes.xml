<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".clothes.ClothesFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaProdotti"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.85"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/buttonSpanCount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/common_google_signin_btn_icon_disabled"
            app:layout_constraintBottom_toTopOf="@+id/listaProdotti"
            app:layout_constraintEnd_toStartOf="@+id/buttonSpanCount1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonSpanCount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_icon_light"
            app:layout_constraintBottom_toTopOf="@+id/listaProdotti"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/filtroButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#FFFFFF"
            android:text="@string/filtri"
            app:layout_constraintBottom_toTopOf="@+id/listaProdotti"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>