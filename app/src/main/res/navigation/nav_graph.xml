<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.instore.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_clothesFragment"
            app:destination="@id/clothesFragment" />
    </fragment>
    <fragment
        android:id="@+id/clothesFragment"
        android:name="com.example.instore.clothes.ClothesFragment"
        android:label="fragment_clothes"
        tools:layout="@layout/fragment_clothes" >
        <action
            android:id="@+id/action_clothesFragment_to_dressFragment"
            app:destination="@id/dressFragment" />
        <argument
            android:name="categoria"
            app:argType="string"
            android:defaultValue='""' />
    </fragment>
    <fragment
        android:id="@+id/dressFragment"
        android:name="com.example.instore.DressFragment"
        android:label="fragment_dress"
        tools:layout="@layout/fragment_dress" >
        <action
            android:id="@+id/action_dressFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.instore.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_qrCodeFragment"
            app:destination="@id/qrCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/qrCodeFragment"
        android:name="com.example.instore.QrCodeFragment"
        android:label="fragment_qr_code"
        tools:layout="@layout/fragment_qr_code" />
</navigation>